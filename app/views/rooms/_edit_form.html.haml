.modal{:style => "z-index:10000"}
  .modal-header
    %a.close{"data-dismiss" => "modal"} X
    Update Room Info
  .modal-body
    = form_for @room do |f|
      = f.label :Name
      = f.text_field :name, :class => "input-xlarge"
      = f.label :Password
      = f.text_field :password
      = f.label :Description
      = f.text_area :desc, :size => "100x10"
      .field
        = f.submit 'Update'
:javascript
  $("#edit_form").modal();
